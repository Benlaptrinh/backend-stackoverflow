# Môi trường production / container
NODE_ENV=production
PORT=3000

FRONTEND_URL=http://localhost:3001

# MongoDB (khi app chạy trong Docker → dùng hostname "mongo")
MONGODB_URI=mongodb://root:root@mongo:27017/backend_stackoverflow?authSource=admin

# Redis (khi app chạy trong Docker → dùng hostname "redis")
REDIS_URL=redis://redis:6379

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/redirect

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# JWT
JWT_SECRET=your_strong_jwt_secret
JWT_REFRESH_SECRET=your_strong_refresh_secret
